{
  "extends": "@tsconfig/node-lts-strictest/tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2020"], // Node 14 https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping
    "target": "ES2020", // Node 14
    "useDefineForClassFields": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "ignoreDeprecations": "5.0" // until @tsconfig/node-lts-strictest is updated
  },
  "include": ["src"]
}
